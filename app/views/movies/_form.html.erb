
<%= render "errors", object: @movie %>

<%= form_for @movie do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br />
  <%= f.label :rating %>
  <%= f.select :rating, Movie::Ratings, prompt: "Select Rating" %>
  <br />
  <%= f.label :total_gross %>
  <%= f.number_field :total_gross %>
  <br />
  <%= f.label :released_on %>
  <%= f.date_select :released_on %>
  <br />
  <%= f.label :cast %>
  <%= f.text_field :cast %>
  <br />
  <%= f.label :director %>
  <%= f.text_field :director %>
  <br />
  <%= f.label :duration %>
  <%= f.text_field :duration %>
  <br />
  <%= f.label :image_file_name %>
  <%= f.text_field :image_file_name,  size: 30, placeholder: "GIF, PNG, or JPG"%>
  <br />
  <%= f.collection_check_boxes :genre_ids, Genre.all, :id, :name %>
  <br />
  <%= f.submit %>
  <%= link_to "Cancel", movies_path %>
<% end %>
